<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scratch Card</title>

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="button-container">
        <% categories.forEach(function(category) { %>
            <button class="btn" data-id="<%= category %>"><%= category %></button>
        <% }); %>
    </div>
    <main>
        <div class="scratch-container">
            <h3 class="scratch-card__title">Scratch Card To Reveal</h3>
            <div class="scratch-card">
                <div class="scratch-card__overlay">
                </div>
                <div class="scratch-card__content">
                    <div class="scratch-card__code">Select A Category</div>
                    <div class="scratch-card__img"></div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/index.js"></script>
</body>
</html>